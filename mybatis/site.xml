<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Setting">
	
	<insert id="save" parameterType="map">
		INSERT INTO `SITE`(`TITLE`,`SUBTITLE`,`LOGOIMAGE`,`ICOIMAGE`,`ADMINEMAIL`,`COPYRIGHT`,`ICPNO`)
		VALUES(#{title},#{subtitle},#{logoImage},#{icoImage},#{adminEmail},#{copyright},#{icpNo})
	</insert>
	
	<select id="getInfo" resultType="site">
		SELECT * FROM `SITE`
	</select>
	
</mapper>